{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@core-v3/*": ["./*"],
      "@/*": ["../*"]
    }
  },
  "include": [
    "domain/**/*.ts",
    "infra/**/*.ts",
    "migrations/**/*.ts"
  ],
  "exclude": [
    "./dist",
    "./tests",
    "../__tests__"
  ]
}
